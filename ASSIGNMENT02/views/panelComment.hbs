<main class='main-ADM'>
    <h1>ADM. Comments</h1>
    {{#if successDeleteMessage_Panel_Comment}}
        <div id='MessageSuccess' class='container-message-visible-small'>
            <div class='container-message success-color'>
                <span class='container-message-span'>{{successDeleteMessage_Panel_Comment}}</span>
                <button class='button-closed' onclick="CloseMessageSuccess()">
                    <svg class='icon-X' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='size-6'>
                      <path stroke-linecap='round' stroke-linejoin='round' d='M6 18 18 6M6 6l12 12' />
                    </svg>
                </button>
            </div>
        </div>
    {{/if}}
    
    {{#if failedDeleteMessage_Panel_Comment}}
        <div id='MessageFailed' class='container-message-visible-small'>
            <div class='container-message warning-color'>
                <span class='container-message-span'>{{failedDeleteMessage_Panel_Comment}}</span>
                <button class='button-closed' onclick="CloseMessageFailed()">
                    <svg class='icon-X' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='size-6'>
                      <path stroke-linecap='round' stroke-linejoin='round' d='M6 18 18 6M6 6l12 12' />
                    </svg>
                </button>
            </div>
        </div>
    {{/if}}
    
    <section class='section-comment'>
        <article class='second-article-comment'>
            {{#each commentsOrderBy}}
                <form class='form-content-comment' method='GET' action='/admComment/panelComment/:_{{_id}}'>
                    <div class='article-content-comment'>
                        <div class='content-comment-user'>
                            <span class='comment-avatar'>{{initials}}</span>
                        </div>
                        <div class='comment-content'>
                            <h3>{{title}}</h3>
                            <div class='comment-content-text'>
                                <p>{{bodydescription}}</p>
                            </div>
                            <div class='comment-content-user'>
                                <span>{{responsable}}</span>
                                <span>Posted:&nbsp;&nbsp;{{date}}</span>
                            </div>
                        </div>
                        <button type='submit'>
                            <svg class='svg' xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="size-6">
                              <path strokeLinecap="round" strokeLinejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                            </svg>
                        </button>
                    </div>
                </form>
                <div class='line'></div>
            {{/each}}
        </article>
    </section>
</main>