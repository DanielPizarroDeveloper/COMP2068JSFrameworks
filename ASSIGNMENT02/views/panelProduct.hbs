<main>
    <h1>ADM. Products</h1>
    <section class='section-options-filter'>
        <h3>Select one option</h3>
        <div class='radio-button-group'>
            <input type='radio' name='option' id='create' value='create'><label for='create'>Create Product</label>
            <input type='radio' name='option' id='update' value='update'><label for='update'>Update Product</label>
            <input type='radio' name='option' id='delete' value='delete'><label for='delete'>Delete Product</label>
        </div>
    </section>  
    
    <div class='hidden' id='createSection'>
        <article class='article-create'>
            <form method='POST'>
                <div class='article-content-form'>
                    <div class='content-group'>
                        <input type='text' name='productName' placeholder='Product name' required>
                        <input type='number' name='quantity' placeholder='Quantity'>
                    </div>

                    <div class='content-group'>
                        <input type='text' name='unit' placeholder='Unit'>
                        <input type='number' name='price' placeholder='Product price'>
                    </div>

                    <textarea class='text-area-create' name='description' placeholder='Detail from service'></textarea>

                    <div class='content-group-file'>
                        <label for='fileUploadCreate' class='custom-file-label'>Upload your image</label>
                        <input type='file' id='fileUploadCreate' accept='.webp' class='hidden'>
                        <p id='fileNameCreate'>No file has been selected.</p>
                        <input class='hidden' type='text' id='base64Create' name='base64Create'>
                    </div>

                    <input type='submit' value='Create Product'>
                </div>
            </form>
        </article>
    </div>

    <div id='updateSection' class='section-list-panel-product hidden'>
        <div class='filter-Result'>
            <input type="text" name='' id=''>
            <input type='submit' value='Search'>
        </div>

        {{#each productsList}}
            <section class='section-result-products'>
                <form method='POST' action='/panelProduct/:_{{_id}}'>
                    <article class='article-result-product-service'>
                        <img class='panel-result-img' src='{{imgProduct}}' alt='Representative image of the product.'>
                        <div class='container-panel-product'>
                            <div class='detail-product-update'>
                                <div class='container-product-information'>
                                    <label>Title</label>
                                    <input type='text' value='{{title}}' name='productName'>
                                </div>

                                <div class='container-product-information'>
                                    <span>Amount:</span>
                                    <input type='number' value='{{quantity}}' name='quantity'>
                                </div>

                                <div class='container-product-information'>
                                    <label>Price</label>
                                    <input type='text' value='{{price}}' name='price'>
                                </div>
                            </div>

                            <div class='detail-product-description'>
                                <div class='container-product-information'>
                                    <label>Description</label>
                                    <textarea class='text-area-editable-product' name='description'>{{detail}}</textarea>
                                </div>
                            </div>

                            <div class='detail-product-description'>
                                <div class='content-group-file'>
                                    <label for='fileUploadUpdate{{_id}}' class='custom-file-label' onclick="fileLoad('{{_id}}')">Upload your image</label>
                                    <input type='file' id='fileUploadUpdate{{_id}}' accept='.webp' class='hidden'>
                                    <p id='fileNameUpdate{{_id}}'>No file has been selected.</p>
                                    <input type='text' id='base64Update{{_id}}' name='base64Update' class='hidden'>
                                </div> 
                            </div>
                        </div>
                    </article>
                    <input type='submit' value='Update Item'>
                </form>
            </section>
        {{/each}}
    </div>

    <div id='deleteSection' class='section-list-panel-product hidden'>
        <div class='filter-Result'>
            <input type='text' placeholder='Synthetic Leather for Seats' name='product-Filter'>
            <input type='submit' value='Search'>
        </div>

        {{#each productsList}}
            <section class='section-result-products'>
                <form method='get' action='/panelProduct/:_{{_id}}'>
                    <article class='article-result-product-service'>
                        <img class='panel-result-img' src='{{imgProduct}}' alt='Representative image of the product.'>
                        <div class='container-panel-product-delete'>
                            <div class='detail-product'>
                                <div class='container-delete-information'>
                                    <h3>Product name: &nbsp;&nbsp;{{title}}</h3>
                                </div>

                                <div class='container-delete-information'>
                                    <h3>Amount: &nbsp;&nbsp;{{quantity}}</h3>
                                </div>

                                <div class='container-delete-information'>
                                    <h3>Price: &nbsp;&nbsp;{{price}}</h2>
                                </div>

                                <div class='container-delete-information'>
                                    <h3>Description: &nbsp;&nbsp;{{detail}}</h3>
                                </div>
                            </div>
                        </div>
                    </article>
                    <input type='submit' value='Delete Item' >
                </form>
            </section>
        {{/each}}
    </div>

</main>