<main>
    <h1>Comments</h1>
    <form method='POST'>
        <section class='section-comment'>
            <input class='comment-type-text' type='text' name='title' placeholder='Title of your opinion'>
            <textarea class='comment-textArea' name='opinion' placeholder='Type your opinion here!'></textarea>
            <input type='submit' value='Post it'>
        </section>
    </form>

    <section>
        <article class='second-article-comment'>
            {{#each commentsOrderBy}}
                <div class='article-content-comment'>
                    <div class='content-comment-user'>
                        <span class='comment-avatar'>{{initials}}</span>
                    </div>

                    <div class='comment-content'>
                        <h3>{{title}}</h3>
                        <div class='comment-content-text'>
                            <p>{{bodydescription}}</p>
                        </div>

                        <div class='comment-content-user'>
                            <span>{{responsable}}</span>
                            <span>Publication date:&nbsp;&nbsp;{{date}}</span>
                        </div>
                    </div>
                </div>

                <div class='line'></div>
            {{/each}}

        </article>
    </section>
</main>