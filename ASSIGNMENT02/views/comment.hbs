<main>
    <h1>Comments</h1>
    {{#if successCreateMessage_Comment}}
        <div id='MessageSuccess' class='container-message-visible-small'>
            <div class='container-message success-color'>
                <span class='container-message-span'>{{successCreateMessage_Comment}}</span>
                <button class='button-closed' onclick="CloseMessageSuccess()">
                    <svg class='icon-X' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='size-6'>
                      <path stroke-linecap='round' stroke-linejoin='round' d='M6 18 18 6M6 6l12 12' />
                    </svg>
                </button>
            </div>
        </div>
    {{/if}}
    
    {{#if failedCreateMessage_Comment}}
        <div id='MessageFailed' class='container-message-visible-small'>
            <div class='container-message warning-color'>
                <span class='container-message-span'>{{failedCreateMessage_Comment}}</span>
                <button class='button-closed' onclick="CloseMessageFailed()">
                    <svg class='icon-X' xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 24 24' stroke-width='1.5' stroke='currentColor' class='size-6'>
                      <path stroke-linecap='round' stroke-linejoin='round' d='M6 18 18 6M6 6l12 12' />
                    </svg>
                </button>
            </div>
        </div>
    {{/if}}

    <form method='POST'>
        <section class='section-comment'>
            <input class='comment-type-text' type='text' name='title' placeholder='Title of your opinion'>
            <textarea class='comment-textArea' name='opinion' placeholder='Type your opinion here!'></textarea>
            <input type='submit' value='Post it'>
        </section>
    </form>

    <section>
        <article class='second-article-comment'>
            {{#each commentsOrderBy}}
                <div class='article-content-comment'>
                    <div class='content-comment-user'>
                        <span class='comment-avatar'>{{initials}}</span>
                    </div>

                    <div class='comment-content'>
                        <h3>{{title}}</h3>
                        <div class='comment-content-text'>
                            <p>{{bodydescription}}</p>
                        </div>

                        <div class='comment-content-user'>
                            <span>{{responsable}}</span>
                            <span>Publication date:&nbsp;&nbsp;{{date}}</span>
                        </div>
                    </div>
                </div>

                <div class='line'></div>
            {{/each}}

        </article>
    </section>
</main>

<script>
    function CloseMessageSuccess() {
        var msjSuccess = document.getElementById('MessageSuccess');
        msjSuccess.classList.add('hidden');
    }

    function CloseMessageFailed() {
        var msjFail = document.getElementById('MessageFailed');
        msjFail.classList.add('hidden');
    }
</script>